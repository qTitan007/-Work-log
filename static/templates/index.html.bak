{% extends "base.html" %}

{% block content %}
<h2>Works log</h2>
{% for item in jobs%}
<div>
    <h3>Action # {{item.id}}</h3>
    <table>
	  <thead>
		<tr>
		  <th>Title of activity</th>
		  <th>Team leader</th>
		  <th>Duration</th>
		  <th>List of collaborators</th>
		  <th>is_finished</th>
		</tr>
	  </thead>
	  <tbody>
		<tr>
		  <td id=col1>{{item.job}}</td>
		  <td id=col2>{{item.team_leader}}</td>
		  <td id=col3>{{item.work_size}} hour</td>
		  <td align=center id=col4>{{item.collaborators}}</td>
		  <td id=col5>{{item.is_finished}}</td>
		</tr>
	  </tbody>
	</table>
</div>
{% endfor %}
{% endblock %}